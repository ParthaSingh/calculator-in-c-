#include<iostream>
using namespace std;
int main (){
    int a,b;
    cout<<"Enter the value of A"<<endl;
    cin>>a;
    cout<<"Enter the value of B"<<endl;
    cin>>b;

    char op;
    cout<<"Enter the operation you want to perform"<<endl;
    cin>>op;

    switch (op)
    {
        case '+' : cout<<"The value of " <<a<<" + "<<b<<" = " <<(a+b)<<endl;
                break;

        case '-' : cout<<"The value of " <<a<<" - "<<b<<" = " <<(a-b)<<endl;
                break;

        case '*' : cout<<"The value of " <<a<<" * "<<b<<" = " <<(a*b)<<endl;
                break;

        case '/' : cout<<"The value of " <<a<<" / "<<b<<" = " <<(a/b)<<endl;
                break;


        case '%' : cout<<"The value of " <<a<<" % "<<b<<" is " <<(a%b)<<endl;
                break;
    }

    return 0;
}
